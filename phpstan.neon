parameters:
    ignoreErrors:
        - "#does not call parent constructor from PHP_CodeSniffer#"
        - "#Constant #"
    excludes_analyse:
        - *packages/CodingStandard/tests/**/correct*
        - *packages/CodingStandard/tests/**/wrong*
    enableUnionTypes: true
    autoload_files:
        - %currentWorkingDirectory%/vendor/squizlabs/php_codesniffer/autoload.php
        - packages/EasyCodingStandard/tests/Finder/SourceFinderSource/SomeClass.php
        - packages/EasyCodingStandard/packages/ChangedFilesDetector/tests/ChangedFilesDetectorSource/OneClass.php

<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <testsuites>
        <testsuite>
            <directory>packages/*/tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">packages/*/src</directory>
        </whitelist>
    </filter>
    <listeners>
        <listener class="Symplify\Tests\ClearLogAndCacheTestListener" />
    </listeners>
</phpunit>

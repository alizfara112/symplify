<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <!-- tests directories to run -->
    <testsuite>
        <directory>tests</directory>
    </testsuite>
    <!-- source to check coverage for -->
    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
    <!-- listener to run after every single test -->
    <listeners>
        <listener class="Symplify\ModularDoctrineFilters\Tests\PHPUnit\Listener\ClearLogAndCacheTestListener" />
    </listeners>
</phpunit>

{
    "name": "symplify/easy-coding-standard",
    "description": "Use Coding Standard with 0-knowledge of PHP-CS-Fixer and PHP_CodeSniffer.",
    "bin": [
        "bin/easy-coding-standard"
    ],
    "require": {
        "php": "^7.1",
        "symfony/console": "^3.2",
        "symfony/finder": "^3.2",
        "nette/application": "^2.4",
        "nette/bootstrap": "^2.4",
        "nette/caching": "^2.4",
        "nette/di": "^2.4",
        "nette/robot-loader": "^3.0",
        "nette/utils": "^2.4",
        "nette/neon": "^2.4",
        "tracy/tracy": "^2.4",

        "symplify/package-builder": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.2",
        "squizlabs/php_codesniffer": "3.0.0RC4 as 2.8.1",
        "contributte/console": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "symplify/coding-standard": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\": "src",
            "Symplify\\EasyCodingStandard\\ChangedFilesDetector\\": "packages/ChangedFilesDetector/src",
            "Symplify\\EasyCodingStandard\\FixerRunner\\": "packages/FixerRunner/src",
            "Symplify\\EasyCodingStandard\\SniffRunner\\": "packages/SniffRunner/src",
            "PHP_CodeSniffer\\": "vendor/squizlabs/php_codesniffer/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\Tests\\": "tests",
            "Symplify\\EasyCodingStandard\\ChangedFilesDetector\\Tests\\": "packages/ChangedFilesDetector/tests",
            "Symplify\\EasyCodingStandard\\FixerRunner\\Tests\\": "packages/FixerRunner/tests",
            "Symplify\\EasyCodingStandard\\SniffRunner\\Tests\\": "packages/SniffRunner/tests"
        }
    }
}

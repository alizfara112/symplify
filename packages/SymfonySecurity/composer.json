{
    "name": "symplify/symfony-security",
    "description": "Voters and Firewall features from Symfony\\Security for standalone use.",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "nette/di": "^2.4",
        "nette/http": "^2.4",
        "nette/security": "^2.4",
        "symfony/security-core": "^3.2",
        "symfony/security-http": "^3.2",
        "symplify/symfony-event-dispatcher": "^1.2"
    },
    "require-dev": {
        "nette/application": "^2.4",
        "nette/bootstrap": "^2.4",
        "nette/robot-loader": "^2.4",
        "nette/utils": "^2.4",
        "phpunit/phpunit": "^5.7",
        "tracy/tracy": "^2.4",
        "symplify/coding-standard": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\SymfonySecurity\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\SymfonySecurity\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/symplify-cs check src tests",
        "fix-cs": "vendor/bin/symplify-cs fix src tests"
    }
}

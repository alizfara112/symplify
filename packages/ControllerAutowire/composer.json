{
    "name": "symplify/controller-autowire",
    "description": "Adds support to autowire controller constructor without pain.",
    "license": "MIT",
    "require": {
        "php": "~7.0",
        "nette/robot-loader": "^2.4",
        "symfony/config": "^3.1",
        "symfony/dependency-injection": "^3.1",
        "symfony/http-kernel": "^3.1",
        "symfony/yaml": "^3.1",
        "symfony/serializer": "^3.1",
        "symfony/security": "^3.1"
    },
    "require-dev": {
        "nette/utils": "^2.4",
        "symfony/framework-bundle": "^3.1",
        "symplify/coding-standard": "^2.0",
        "phpunit/phpunit": "^5.7",
        "doctrine/annotations": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ControllerAutowire\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\ControllerAutowire\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/symplify-cs check src tests",
        "fix-cs": "vendor/bin/symplify-cs fix src tests"
    }
}

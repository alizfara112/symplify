#!/usr/bin/env php
<?php declare(strict_types=1);

require_once __DIR__ . '/autoload.php';

use Symfony\Component\Console\Application;
use Symfony\Component\Console\Input\ArgvInput;
use Symplify\Autodiscovery\HttpKernel\AutodiscoveryKernel;

$isDebug = (bool) (new ArgvInput())->hasParameterOption(['--debug', '-v', '-vv', '-vvv']);
$autodiscoveryKernel = new AutodiscoveryKernel('prod', $isDebug);
$autodiscoveryKernel->boot();

$container = $autodiscoveryKernel->getContainer();

$application = $container->get(Application::class);
exit($application->run());

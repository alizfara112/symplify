{
    "name": "symplify/coding-standard",
    "description": "Set of rules for PHP_CodeSniffer.",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "symplify/php7_codesniffer": "@dev",
        "tomas-votruba/php_codesniffer-3-pretagged": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\CodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\CodingStandard\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "bin/symplify-cs check src tests",
        "fix-cs": "bin/symplify-cs fix src tests"
    }
}

{
    "name": "symplify/symplify",
    "description": "Main repository for Symplify packages development.",
    "license": "MIT",
    "require": {
        "php": "~7.0",

        "abraham/twitteroauth": "~0.7",
        "michelf/php-markdown": "~1.6",
        "react/http": "~0.4",

        "doctrine/dbal": "^2.5",
        "doctrine/orm": "^2.5",

        "nette/bootstrap": "~2.4",
        "nette/di": "~2.4",
        "nette/finder": "~2.4",
        "nette/http": "~2.4",
        "latte/latte": "~2.4",
        "nette/utils": "~2.4",
        "nette/robot-loader": "~2.4",
        "tracy/tracy": "^2.4",

        "symfony/config": "^3.0",
        "symfony/console": "^3.0",
        "symfony/dependency-injection": "^3.0",
        "symfony/event-dispatcher": "^3.0",
        "symfony/http-kernel": "^3.1",
        "symfony/process": "^3.0",
        "symfony/property-access": "^3.0",
        "symfony/routing": "^3.0",
        "symfony/twig-bundle": "^3.0",
        "symfony/yaml": "^3.0",
        "symfony-cmf/routing-bundle": "dev-master as 1.4",

        "friendsofphp/php-cs-fixer": "^1.12",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "require-dev": {
        "hautelook/alice-bundle": "~1.3",
        "league/tactician-bundle": "~0.4",

        "symplify/coding-standard": "~1.0",
        "phpunit/phpunit": "^5.5",

        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "^2.3",

        "nette/application": "~2.4",
        "nette/bootstrap": "~2.4",
        "nette/utils": "^2.4",

        "symfony/form": "^3.0",
        "symfony/framework-bundle": "^3.0",
        "symfony/validator": "^3.0",
        "twig/twig": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ActionAutowire\\": "src/ActionAutowire/src",
            "Symplify\\AutoServiceRegistration\\": "src/AutoServiceRegistration/src",
            "Symplify\\CodingStandard\\": "src/CodingStandard/src",
            "Symplify\\ControllerAutowire\\": "src/ControllerAutowire/src",
            "Symplify\\DefaultAutowire\\": "src/DefaultAutowire/src",
            "Symplify\\ModularDoctrineFilters\\": "src/ModularDoctrineFilters/src",
            "Symplify\\ModularRouting\\": "src/ModularRouting/src",
            "Symplify\\NetteAdapterForSymfonyBundles\\": "src/NetteAdapterForSymfonyBundles/src",
            "Symplify\\TwitterBrandBuilder\\": "src/TwitterBrandBuilder/src",
            "Symplify\\PHP7_Sculpin\\": "src/PHP7_Sculpin/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\ActionAutowire\\Tests\\": "src/ActionAutowire/tests",
            "Symplify\\AutoServiceRegistration\\Tests\\": "src/AutoServiceRegistration/tests",
            "Symplify\\CodingStandard\\Tests\\": "src/CodingStandard/tests",
            "Symplify\\ControllerAutowire\\Tests\\": "src/ControllerAutowire/tests",
            "Symplify\\DefaultAutowire\\Tests\\": "src/DefaultAutowire/tests",
            "Symplify\\ModularDoctrineFilters\\Tests\\": "src/ModularDoctrineFilters/tests",
            "Symplify\\ModularRouting\\Tests\\": "src/ModularRouting/tests",
            "Symplify\\NetteAdapterForSymfonyBundles\\Tests\\": "src/NetteAdapterForSymfonyBundles/tests",
            "Symplify\\TwitterBrandBuilder\\Tests\\": "src/TwitterBrandBuilder/tests",
            "Symplify\\PHP7_Sculpin\\Tests\\": "src/PHP7_Sculpin/tests",
            "React\\Tests\\Http\\": "vendor/react/http/tests"
        }
    },
    "scripts": {
        "check-cs": [
            "vendor/bin/symplify-cs check src/*/src",
            "vendor/bin/symplify-cs check src/*/tests"
        ],
        "fix-cs": [
            "vendor/bin/symplify-cs fix src/*/src",
            "vendor/bin/symplify-cs fix src/*/tests"
        ]
    }
}

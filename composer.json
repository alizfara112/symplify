{
    "name": "symplify/symplify",
    "description": "Register your service by suffix scan instead of manual writing.",
    "keywords": ["Symfony", "autowire", "auto", "registration", "dependency injection"],
    "license": "MIT",
    "require": {
        "php": "~7.0",
        "nette/robot-loader": "^2.4",
        "symfony/config": "^3.0",
        "symfony/dependency-injection": "^3.0",
        "symfony/http-kernel": "^3.0",
        "symfony/event-dispatcher": "^3.0",

        "doctrine/dbal": "^2.4",
        "doctrine/orm": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "symplify/coding-standard": "^1.0",

        "nette/utils": "^2.4",

        "doctrine/doctrine-bundle": "^1.6",

        "symfony/form": "^3.0",
        "symfony/framework-bundle": "^3.0",
        "symfony/validator": "^3.0",
        "twig/twig": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\AutoServiceRegistration\\": "src/AutoServiceRegistration/src",
            "Symplify\\ModularDoctrineFilters\\": "src/ModularDoctrineFilters/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\AutoServiceRegistration\\Tests\\": "src/AutoServiceRegistration/tests",
            "Symplify\\ModularDoctrineFilters\\Tests\\": "src/ModularDoctrineFilters/tests"
        }
    },
    "replace": {
        "symplify/auto-service-registration": "self.version",
        "symplify/modular-doctrine-filters": "self.version",
        "symplify/coding-standard": "self.version"
    },
    "scripts": {
        "check-cs": [
            "vendor/bin/symplify-cs check src/AutoServiceRegistration/src",
            "vendor/bin/symplify-cs check src/AutoServiceRegistration/tests",
            "vendor/bin/symplify-cs check src/ModularDoctrineFilters/src",
            "vendor/bin/symplify-cs check src/ModularDoctrineFilters/tests"
        ],
        "fix-cs": [
            "vendor/bin/symplify-cs fix src/AutoServiceRegistration/src",
            "vendor/bin/symplify-cs fix src/AutoServiceRegistration/tests",
            "vendor/bin/symplify-cs fix src/ModularDoctrineFilters/src",
            "vendor/bin/symplify-cs fix src/ModularDoctrineFilters/tests"
        ]
    }
}

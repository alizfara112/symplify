{
    "name": "symplify/symplify",
    "description": "Register your service by suffix scan instead of manual writing.",
    "keywords": ["Symfony", "autowire", "auto", "registration", "dependency injection"],
    "license": "MIT",
    "require": {
        "php": "~7.0",
        "nette/robot-loader": "^2.4",
        "symfony/config": "^3.0",
        "symfony/dependency-injection": "^3.0",
        "symfony/http-kernel": "^3.0"
    },
    "require-dev": {
        "nette/utils": "^2.4",
        "symplify/coding-standard": "^0.3",
        "phpunit/phpunit": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\AutoServiceRegistration\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": [
            "vendor/bin/symplify-cs check src/AutoServiceRegistration/src",
            "vendor/bin/symplify-cs check src/AutoServiceRegistration/tests",
            "vendor/bin/symplify-cs check src/ModularDoctrineFilters/src",
            "vendor/bin/symplify-cs check src/ModularDoctrineFilters/tests"
        ],
        "fix-cs": [
            "vendor/bin/symplify-cs fix src/AutoServiceRegistration/src",
            "vendor/bin/symplify-cs fix src/AutoServiceRegistration/tests",
            "vendor/bin/symplify-cs fix src/ModularDoctrineFilters/src",
            "vendor/bin/symplify-cs fix src/ModularDoctrineFilters/tests"
        ]
    }
}

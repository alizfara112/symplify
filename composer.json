{
    "name": "symplify/symplify",
    "description": "Main repository for Symplify packages development.",
    "license": "MIT",
    "require": {
        "php": "~7.0",

        "abraham/twitteroauth": "~0.7",
        "michelf/php-markdown": "~1.6",
        "react/http": "~0.4",
        "ralouphie/mimey": "^1.0",
        "cpliakas/git-wrapper": "^1.7",

        "doctrine/dbal": "^2.5",
        "doctrine/orm": "^2.5",

        "nette/bootstrap": "~2.4",
        "nette/di": "~2.4",
        "nette/finder": "~2.4",
        "nette/http": "~2.4",
        "latte/latte": "~2.4",
        "nette/utils": "~2.4",
        "nette/robot-loader": "~2.4",
        "tracy/tracy": "^2.4",

        "symfony/asset": "^3.1",
        "symfony/config": "^3.1",
        "symfony/console": "^3.1",
        "symfony/dependency-injection": "^3.1",
        "symfony/event-dispatcher": "^3.1",
        "symfony/http-kernel": "^3.1",
        "symfony/process": "^3.1",
        "symfony/property-access": "^3.1",
        "symfony/routing": "^3.1",
        "symfony/templating": "^3.1",
        "symfony/twig-bundle": "^3.1",
        "symfony/yaml": "^3.1",
        "symfony/validator": "^3.1",
        "symfony-cmf/routing-bundle": "dev-master as 1.4",

        "friendsofphp/php-cs-fixer": "^1.12",
        "squizlabs/php_codesniffer": "^2.7",
        "zenify/modular-latte-filters": "^0.2.1"
    },
    "require-dev": {
        "hautelook/alice-bundle": "~1.3",
        "league/tactician-bundle": "~0.4",

        "phpunit/phpunit": "^5.6",

        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-fixtures-bundle": "^2.3",

        "nette/application": "~2.4",
        "nette/bootstrap": "~2.4",
        "nette/utils": "^2.4",

        "symfony/form": "^3.1",
        "symfony/framework-bundle": "^3.1",
        "symfony/validator": "^3.1",
        "twig/twig": "^1.28",
        "doctrine/annotations": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ActionAutowire\\": "packages/ActionAutowire/src",
            "Symplify\\AutoServiceRegistration\\": "packages/AutoServiceRegistration/src",
            "Symplify\\CodingStandard\\": "packages/CodingStandard/src",
            "Symplify\\ControllerAutowire\\": "packages/ControllerAutowire/src",
            "Symplify\\DefaultAutowire\\": "packages/DefaultAutowire/src",
            "Symplify\\ModularDoctrineFilters\\": "packages/ModularDoctrineFilters/src",
            "Symplify\\ModularRouting\\": "packages/ModularRouting/src",
            "Symplify\\NetteAdapterForSymfonyBundles\\": "packages/NetteAdapterForSymfonyBundles/src",
            "Symplify\\Statie\\": "packages/Statie/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\ActionAutowire\\Tests\\": "packages/ActionAutowire/tests",
            "Symplify\\AutoServiceRegistration\\Tests\\": "packages/AutoServiceRegistration/tests",
            "Symplify\\CodingStandard\\Tests\\": "packages/CodingStandard/tests",
            "Symplify\\ControllerAutowire\\Tests\\": "packages/ControllerAutowire/tests",
            "Symplify\\DefaultAutowire\\Tests\\": "packages/DefaultAutowire/tests",
            "Symplify\\ModularDoctrineFilters\\Tests\\": "packages/ModularDoctrineFilters/tests",
            "Symplify\\ModularRouting\\Tests\\": "packages/ModularRouting/tests",
            "Symplify\\NetteAdapterForSymfonyBundles\\Tests\\": "packages/NetteAdapterForSymfonyBundles/tests",
            "Symplify\\Statie\\Tests\\": "packages/Statie/tests",
            "Symplify\\Tests\\": "tests",
            "React\\Tests\\Http\\": "vendor/react/http/tests"
        }
    },
    "scripts": {
        "check-cs": [
            "packages/CodingStandard/bin/symplify-cs check packages/*/src",
            "packages/CodingStandard/bin/symplify-cs check packages/*/tests"
        ],
        "fix-cs": [
            "packages/CodingStandard/bin/symplify-cs fix packages/*/src",
            "packages/CodingStandard/bin/symplify-cs fix packages/*/tests"
        ]
    }
}

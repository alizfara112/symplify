{
    "name": "symplify/php7_sculpin",
    "description": "Static Site Generator",
    "keywords": ["static", "site", "generator", "latte"],
    "license": "MIT",
    "authors": [
        { "name": "Tomas Votruba", "email": "tomas.vot@gmail.com", "homepage": "http://tomasvotruba.cz" }
    ],
    "bin": [
        "bin/sculpin"
    ],
    "require": {
        "php": "~7.0",
        "michelf/php-markdown": "~1.6",
        "react/http": "~0.4",

        "latte/latte": "~2.4",

        "nette/bootstrap": "~2.4",
        "nette/di": "~2.4",
        "nette/utils": "~2.4",
        "nette/finder": "~2.4",
        "tracy/tracy": "~2.4",

        "symfony/console": "~3.0",
        "symfony/yaml": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5",
        "friendsofphp/php-cs-fixer": "~1.12"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\PHP7_Sculpin\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\PHP7_Sculpin\\Tests\\": "tests",
            "React\\Tests\\Http\\": "vendor/react/http/tests"
        }
    },
    "scripts": {
        "check-cs": [
            "vendor/bin/php-cs-fixer fix src --level symfony --fixers=short_array_syntax --dry-run --diff",
            "vendor/bin/php-cs-fixer fix tests --level symfony --fixers=short_array_syntax --dry-run --diff"
        ],
        "fix-cs": [
            "vendor/bin/php-cs-fixer fix src --level symfony --fixers=short_array_syntax",
            "vendor/bin/php-cs-fixer fix tests --level symfony --fixers=short_array_syntax"
        ]
    }
}

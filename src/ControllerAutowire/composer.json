    "license": "MIT",
    "require": {
        "php": "~7.0",
        "nette/robot-loader": "^2.4",
        "symfony/config": "^3.0",
        "symfony/dependency-injection": "^3.0",
        "symfony/http-kernel": "^3.0",
        "symfony/yaml": "^3.0"
    },
    "require-dev": {
        "nette/utils": "^2.4",
        "symfony/framework-bundle": "^3.0",
        "symplify/coding-standard": "^1.0",
        "phpunit/phpunit": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ControllerAutowire\\": "src"
